# Habilitar mod_rewrite
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ public/index.php?/$1 [QSA,L]
</IfModule>

# ============ CORS HEADERS - NIVEL APACHE ============
<IfModule mod_headers.c>
    # Permitir solicitudes OPTIONS (preflight)
    Header always set Access-Control-Allow-Methods "GET, POST, OPTIONS, PUT, DELETE, PATCH"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With, X-API-KEY"
    Header always set Access-Control-Max-Age "3600"
    
    # Para desarrollo local
    # Header always set Access-Control-Allow-Origin "http://localhost:3000"
    # Header always set Access-Control-Allow-Origin "http://localhost:8080"
    
    # Para producción
    # Header always set Access-Control-Allow-Origin "https://tudominio.com"
</IfModule>

# Comprimir respuestas JSON
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache para archivos estáticos
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 week"
    ExpiresByType text/css "access plus 1 week"
</IfModule>
